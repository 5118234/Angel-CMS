@model Angelo.Connect.CoreWidgets.Models.SlideShow

@{
    var controlId = "slideshow-" + Model.Id.Replace("-", "");
}

<div id="@controlId" class="carousel slide" data-ride="carousel" data-interval="@Model.Speed">
    <ol class="carousel-indicators">
        <li data-target="@controlId" data-slide-to="0" class="active"></li>
        <li data-target="@controlId" data-slide-to="1"></li>
        <li data-target="@controlId" data-slide-to="2"></li>       
    </ol>
    <div class="carousel-inner" role="listbox">

        <div class="item active">
            <img src="@Model.Image1Src" alt="@Model.Image1Caption" class="img-responsive" />
            <div class="carousel-caption">
                <p>@Model.Image1Caption</p>
            </div>
        </div>

        <div class="item">
            <img src="@Model.Image2Src" alt="@Model.Image2Caption" class="img-responsive" />
            <div class="carousel-caption">
                <p>@Model.Image2Caption</p>
            </div>
        </div>

        <div class="item">
            <img src="@Model.Image3Src" alt="@Model.Image3Caption" class="img-responsive" />
            <div class="carousel-caption">
                <p>@Model.Image3Caption</p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#@controlId" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#@controlId" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>