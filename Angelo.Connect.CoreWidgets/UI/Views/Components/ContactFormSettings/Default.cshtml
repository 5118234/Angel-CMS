@model Angelo.Connect.CoreWidgets.Models.ContactForm

<form class="form" action="/sys/widgets/contactform" data-ajax-form="true">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label class="form-label">
            @Html.Localize("Contact Form Name")
        </label>
        <div>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="text-muted">
            @Html.Localize("Used to distinquish messages sent from different contact forms")
        </div>
    </div>
    <div class="form-group">
        <label class="form-label">
            @Html.Localize("Recipient Email Address(es)")
        </label>
        <div>
            <input class="form-control" asp-for="Recipients" />
        </div>
        <div class="text-muted">
            @Html.Localize("Use a semicolon (;) to seperate addresses when specifying multiple recipients")
        </div>
        <p class="text-muted">
            @Html.Localize("Email addresses are stored securely and cannot be accessed by users or bots")
        </p>
    </div>
    <div class="form-group">
        <label class="form-label" for="[name=AllowAnonymous]">
            @Html.Localize("Allow Anonymous Users")
        </label>
        <div>
            <input type="checkbox" class="form-checkbox" asp-for="AllowAnonymous" /> &nbsp;
        </div>
        <div class="text-muted">
            @Html.Localize("Turning this on significantly increases the risk of spam from automated bots")
        </div>
    </div>
</form>