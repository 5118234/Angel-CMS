@model SendCodeViewModel
@{
    var origin = ViewData["Origin"];
}

<h1>@Html.Localize("Page.Login.SendCode.Title").</h1>

<form asp-action="SendCode" asp-route-origin="@origin" method="post" class="form-horizontal" role="form">
    <input asp-for="RememberMe" type="hidden" />
    <div class="row">
        <div class="col-md-8">
            @Html.Localize("Label.Login.TwoFactorAuth")
            <select asp-for="SelectedProvider" asp-items="Model.Providers"></select>
            <button type="submit" class="btn btn-default">@Html.Localize("Button.Submit")</button>
        </div>
    </div>
</form>

