@model VerifyCodeViewModel
@{
    var origin = ViewData["Origin"];
    var status = (string)ViewData["Status"];
};

<h1>@Html.Localize("Page.Login.Verify.Title").</h1>

@Html.Partial("_ValidationSummary")

<form asp-controller="Account" asp-action="VerifyCode" asp-route-origin="@origin" method="post" class="form-horizontal" role="form">
    <input asp-for="Provider" type="hidden" />
    <input asp-for="RememberMe" type="hidden" />

    <h4>@Html.Localize(status)</h4>

    <hr />
    <div class="form-group">
        <label asp-for="Code" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                <input asp-for="RememberBrowser" />
                <label asp-for="RememberBrowser">@Html.DisplayNameFor(x => x.RememberBrowser)</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">@Html.Localize("Button.Submit")</button>
        </div>
    </div>
</form>
