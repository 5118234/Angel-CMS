@model ForgotPasswordViewModel
@{
    var origin = ViewData["Origin"];
}

<h1>@Html.Localize("Page.Login.ForgotPassword.Title")</h1>
<br />
<br />

<h4>@Html.Localize("Label.Login.ProvideEmail")</h4>

@Html.Partial("_ValidationSummary")

<div class="row">
    <div class="col-md-8">
        <hr />
        <br />
        <form asp-controller="Account" asp-action="ForgotPassword" asp-route-origin="@origin" method="post" class="form-horizontal" role="form">
            <div class="form-group">
                <label asp-for="Email" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <br />
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">@Html.Localize("Submit")</button>
                </div>
            </div>
        </form>
        <hr />
        <p>
            <i>@Html.Localize("Label.Login.EmailSubmission")</i>
        </p>
        <br />
        <div class="pull-right">
            <a href="@origin">
                @Html.Localize("Label.Login.Return")
            </a>
        </div>
    </div>
</div>