@model Angelo.Aegis.Messaging.Models.ResetPasswordEmail

<h2>Reset your account password</h2>

<h3>
    Your username: @Model.Username
</h3>
<br />
<p>
    Please click the link provided below to reset your password.
</p>
<p>
    <a href="@Model.EmailLink">
        Change password
    </a>
</p>
<br />
<p>
    <i>If you are unable to click on the provided link then copy and paste the following url into your browser.</i>
    <br />
    @Model.EmailLink
</p>