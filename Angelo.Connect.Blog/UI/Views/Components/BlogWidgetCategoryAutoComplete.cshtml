@using Newtonsoft.Json
@using Newtonsoft.Json.Serialization
@using Angelo.Connect.Models
@using Angelo.Connect.Blog.Models;
@using Angelo.Connect.Blog.UI.ViewModels

@inject Angelo.Connect.Configuration.SiteContext siteContext

@model BlogWidgetCategoryFormViewModel


<div class="k-content">
    @(Html.Kendo().ComboBox()
          .Name("blogWidgetCategoryAutoComplete")
          .Placeholder(Html.Localize("Search for category by name...").ToString())
          .DataTextField(Html.Localize("Title").ToString())
          .DataValueField(Html.Localize("Id").ToString())
          .HtmlAttributes(new { style = "width:100%;" })
          .Filter(FilterType.Contains)
          .BindTo(Model.BlogCategories)
          .Events(e =>
          {
              e.Select("onSelectWidgetPostCategory");
          })
    )
</div>
