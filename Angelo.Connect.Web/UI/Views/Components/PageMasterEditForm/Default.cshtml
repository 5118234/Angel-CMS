@model PageMasterViewModel

@{
    var componentId = (string)ViewData["cid"];
    var previewPath = Model.PreviewPath;
}

<form id="@componentId" action="/api/masterpages" class="form-horizontal" data-ajax-form>
    <input hidden="hidden" name="Id" type="text" asp-for="Id" />
    <input hidden="hidden" name="SiteId" type="text" asp-for="SiteId" />
    <input id="previewPath" hidden="hidden" name="PreviewPath" type="text" asp-for="PreviewPath" />

    <div class="form-group">
        <label class="col-sm-4">Title</label>
        <div class="col-sm-8">
            <input id="editPageMasterTitle" name="Title" type="text" class="form-control" asp-for="Title" value="@Model.Title" required autofocus spellcheck="true" />
        </div>
    </div>
        <div class="form-group">
            <label class="col-sm-4">Templates</label>
            <div id="ddl" class="col-sm-8">
                <select id="viewTemplatesDropDown" asp-for="TemplateId" class="form-control" asp-items="@Model.AvailableLayouts" onchange="(onDropdownChange(this))"></select>
            </div>
        </div>
</form>
