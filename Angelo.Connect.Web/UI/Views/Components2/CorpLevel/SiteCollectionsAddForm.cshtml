@model SiteCollectionViewModel

@{
    var componentId = (string)ViewData["cid"];
}

<form id="@componentId" action="/api/sitecollections" class="form-horizontal" data-ajax-form>
    <input hidden="hidden" name="ClientId" type="text" asp-for="ClientId" />
    <div class="form-group">
        <label class="col-sm-4">@Html.Localize("Name")</label>
        <div class="col-sm-8">
            <input id="addNewCollectionName" name="Name" type="text" class="form-control" asp-for="Name" value="" required autofocus />
        </div>
    </div>
</form>