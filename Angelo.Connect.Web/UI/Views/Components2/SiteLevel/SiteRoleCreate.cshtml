@model PoolRoleViewModel

@{
    var componentId = (string)ViewData["cid"];
}

<form id="@componentId" action="@routes.SiteApi("roles")" method="post" class="form form-horizontal"  data-ajax-form>
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.PoolId)

    <div class="form-group">
        <label class="col-sm-2">@Html.ShortNameFor(x => x.Name)</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 checkbox">
            <label>
                <input type="checkbox" asp-for="IsDefault" />
                @Html.ShortNameFor(x => x.IsDefault)
            </label>
        </div>
    </div>
</form>
