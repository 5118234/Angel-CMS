@model SiteViewModel

@{
    
    var componentId = (string)ViewData["cid"];
  
}

<form id="@componentId" class="form form-horizontal"  data-ajax-form>


    <div class="form-group">
        <label class="col-sm-3">@Html.Localize("Domains")</label>   
        <div class="col-sm-9">
            <div class="form-control" style="height:auto;">
                @for (int i = 0; i < Model.Domains.Count(); i++)
                {
                    <div class="row">
                        <div class="col-sm-12">
                            <label>@Model.Domains[i].DomainKey</label>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</form>