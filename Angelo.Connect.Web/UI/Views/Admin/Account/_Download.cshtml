<div class="modal-body form-group">
    <div class="center-block">
        @Html.ActionLink(string.Empty, "download", "library", new { }, new { @class = "hidden h4", id="dllink" })
        <span id="dlhint" class="">Press 'Start' to begin downloading.</span>
    </div>
</div>
<div class="modal-footer">
    <button id="dlstart" type="button" class="btn btn-default btn-primary" onclick="fmVM.downloadSelected()">Start</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-default hidden" data-dismiss="modal">Finish waiting</button>
</div>

<script type="text/javascript">
    $('#dlstart').click(function () {
        $('#dlstart').prop('disable', true);
        $('#dlhint').text('Queuing items for download...');
    });
</script>