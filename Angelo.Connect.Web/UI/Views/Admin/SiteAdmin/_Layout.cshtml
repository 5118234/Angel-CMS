@using Microsoft.AspNetCore.Mvc.Controllers

@{
    Layout = "_LayoutAdmin";
}

@section WindowTitle {
   @Html.Localize("Site Admin")
}

@section Styles {
    @RenderSection("Styles", required: false)
}

@section HeadScripts {
    @RenderSection("HeadScripts", required: false)
}

@section AdminPageHeader {
    <div class="admin-page-title">
        @RenderSection("Title", required: false)
    </div>
}    

@section AdminMenu {
    @Html.Partial("_SiteMenu")
}    

@section AdminBody {
    @RenderBody()
}  
      
@section AdminPanel {
    @RenderSection("Panel", required: false)
}
            

@section Scripts {
    @RenderSection("Scripts", required: false)
}
