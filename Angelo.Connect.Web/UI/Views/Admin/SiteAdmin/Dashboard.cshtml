@model Angelo.Connect.Models.Site
@inject MenuProvider _menuProvider;


@section Styles {
    <link rel="stylesheet" href="~/css/views/admin/dashboard.css" asp-append-version="true"/>
}


@section Title {
    @Html.Localize($"Site Dashboard: {Model.Title}")
}


@section Panel{
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="panel-title">@Html.Localize("Open Support Tickets")</span>
        </div>
        <div class="panel-body">
            <div class="placeholder">
                Placeholder
            </div>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="panel-title">@Html.Localize("Recent Updates")</span>
        </div>
        <div class="panel-body" style="height: 500px">
            <div class="placeholder">
                Placeholder
            </div>
        </div>
    </div>
}

<div class="dashboard-icons">
    <div class="row">
        @{ 
            var menuItems = await _menuProvider.GetMenuItemsAsync(MenuType.SiteTools);
        }
       

        @foreach (var item in menuItems)
        {
            <div class="col-xs-6 col-md-4">
                <a class="thumbnail dashboard-thumbnail" href="@item.Url">
                    @item.Icon.Render()
                    <div class="caption">
                        <h3>@Html.Localize(item.Title)</h3>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
       